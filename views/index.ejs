  <%- include('../public/partials/navbar') %>

  <!-- 导航栏下面所有的内容 -->
<div class="main">
    <!-- 左侧导航 -->
    <aside class="classify">
      <div class="image-container">
        <img src="/images/Steam.png" alt="" style="width: 300px; height: auto; opacity: 0.3;  ">
      </div>
      



    </aside>
    <!-- 右侧的全部内容区 -->
    <div class="right_content">
      <!-- 内容区最上面的新品轮播图 -->
      <div class="new_content" style="margin-bottom: 10px;">
